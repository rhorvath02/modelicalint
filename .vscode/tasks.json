{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Modelica Lint",
      "type": "shell",
      "command": "modelicalint .",
      "problemMatcher": {
        "owner": "modelicalint",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(ML\\d+)\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "code": 4,
          "message": 5
        }
      }
    }
  ]
}

